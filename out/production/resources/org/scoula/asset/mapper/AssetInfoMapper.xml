<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.scoula.asset.mapper.AssetInfoMapper">
    <resultMap id="assetInfoMap" type="org.scoula.asset.domain.AssetInfoVo">
        <id property="email" column="email"/>
        <result property="asset" column="asset"/>
        <result property="segment" column="segment"/>
        <result property="filename1" column="filename1"/>
        <result property="filename2" column="filename2"/>
    </resultMap>

    <select id="getAssetInfoByEmail" resultMap="assetInfoMap">
        SELECT *
        FROM asset_info
        WHERE email = #{email}
    </select>

    <insert id="insertAssetInfo">
        INSERT INTO asset_info (email, asset, segment, filename1, filename2)
        VALUES (#{email}, #{asset}, #{segment}, #{filename1}, #{filename2})
    </insert>

    <update id="updateAssetInfo">
        UPDATE asset_info
        SET asset     = #{asset},
            segment   = #{segment},
            filename1 = #{filename1},
            filename2 = #{filename2}
        WHERE email = #{email}
    </update>

    <delete id="deleteAssetInfo">
        DELETE
        FROM asset_info
        WHERE email = #{email}
    </delete>
</mapper>
