<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c{1} - %msg%n"/>
        </Console>

        <Routing name="DomainRouting">
            <Routes pattern="${ctx:domain}">
                <Route>
                    <RollingFile name="DomainFile" fileName="logs/domain/${ctx:domain}.csv"
                                 filePattern="logs/domain/archive/${ctx:domain}-%d{yyyy-MM-dd}-%i.csv.gz">
                        <PatternLayout charset="UTF-8"
                                       pattern="%d{yyyy-MM-dd HH:mm:ss},%-5level,%c{1},&quot;%m&quot;,&quot;%ex{full}&quot;%n"
                                       header="Time,Level,Logger,Message,Exception\n"/>
                        <Policies>
                            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                            <SizeBasedTriggeringPolicy size="10MB"/>
                        </Policies>
                    </RollingFile>
                </Route>
            </Routes>
        </Routing>

        <RollingFile name="InfoFile" fileName="logs/info.csv"
                     filePattern="logs/archive/info-%d{yyyy-MM-dd}-%i.csv.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%d{yyyy-MM-dd HH:mm:ss},%-5level,%c{1},&quot;%m&quot;,&quot;%ex{full}&quot;%n"
                           header="Time,Level,Logger,Message,Exception\n"/>
            <Filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="WarnFile" fileName="logs/warn.csv"
                     filePattern="logs/archive/warn-%d{yyyy-MM-dd}-%i.csv.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%d{yyyy-MM-dd HH:mm:ss},%-5level,%c{1},&quot;%m&quot;,&quot;%ex{full}&quot;%n"
                           header="Time,Level,Logger,Message,Exception\n"/>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="ErrorFile" fileName="logs/error.csv"
                     filePattern="logs/archive/error-%d{yyyy-MM-dd}-%i.csv.gz">
            <PatternLayout charset="UTF-8"
                           pattern="%d{yyyy-MM-dd HH:mm:ss},%-5level,%c{1},&quot;%m&quot;,&quot;%ex{full}&quot;%n"
                           header="Time,Level,Logger,Message,Exception\n"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- AOP 로그를 RoutingAppender로 처리 -->
        <Logger name="org.scoula.common.aop" level="INFO" additivity="false">
            <AppenderRef ref="DomainRouting"/>
            <AppenderRef ref="InfoFile"/>
        </Logger>

        <Logger name="org.scoula.common.aop.warn" level="WARN" additivity="false">
            <AppenderRef ref="WarnFile"/>
        </Logger>
        <Logger name="org.scoula.common.aop.error" level="ERROR" additivity="false">
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Logger name="org.scoula" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="InfoFile"/>
            <AppenderRef ref="WarnFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Logger name="jdbc" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="WarnFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Logger name="com.zaxxer.hikari" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="WarnFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Logger name="org.springframework.jdbc" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="WarnFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Logger name="org.springframework" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="WarnFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Root level="WARN">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="WarnFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>
    </Loggers>
</Configuration>