<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.statistics.mapper.BookingStatsMapper">

    <resultMap id="bookingStatsResultMap" type="org.scoula.statistics.dto.BookingStatsDto">
        <id column="branch_id" property="branchId"/>
        <result column="booking_count" property="bookingCount"/>
    </resultMap>

    <select id="selectBookingStatsBetween" parameterType="map" resultMap="bookingStatsResultMap">
        SELECT branch_id,
        COUNT(*) AS booking_count
        FROM booking
        WHERE date >= #{fromDate}
        AND date &lt;= #{toDate}
        GROUP BY branch_id
        ORDER BY branch_id
    </select>

</mapper>

