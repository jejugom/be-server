<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.View.Event.mapper.QuizMapper">

    <resultMap id="QuizResultMap" type="org.scoula.View.Event.dto.QuizDto">
        <id property="id" column="id"/>
        <result property="question" column="question"/>
        <result property="choices" column="choices"/>
        <result property="answer" column="answer"/>
        <result property="explanation" column="explanation"/>
    </resultMap>

    <select id="findById" parameterType="string" resultMap="QuizResultMap">
        SELECT id, question, choices, answer, explanation
        FROM quiz
        WHERE id = #{id}
    </select>

</mapper>
